{
	"compilerOptions": {
        "baseUrl": "./",
		"experimentalDecorators": true,
		"lib": ["es5", "dom"],
		"module": "esnext",
		"target": "esnext",
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"outDir": "lib",
		"removeComments": false,
		"typeRoots": [
			"node_modules/@types",
			"src/lib/types"
		],
		"types": [
			"@types/node"
		]
	},
	"files": [
		"src/lib/index.ts"
	],
	"exclude": [
		"node_modules",
		"src/e2e/resources",
		"*.test.ts",
		"*.spec.ts",
		"*.e2e.ts"
	]
}